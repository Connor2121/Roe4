                    </li>
                </ul>
            </div>
            <div class="card-content grey lighten-4">
                <div id="product-tab">
                    {{!-- product search input --}}
                    <div class="input-field col l6 s12">
                        <input placeholder="ex; Carrots" id="search_item" type="text" class="validate">
                        <label for="search_item">Product</label>
                        <button id="productButton" class="button button-rounded-hover">Search</button>
                    </div>
                </div>
        
                <div id="city-tab">
                    {{!-- city select dropdown --}}
                    <div class="input-field col l6 s12">
                        <select id="city-name" >
                            {{!-- dynamically generate these based on search criteria --}}
                            <option value="" disabled selected>Choose your option</option>
                        </select>
        
                        <label>City</label>
                        <button id="cityButton" class="button button-rounded-hover">Search</button>
                    </div>
                </div>
        
                <div id="vendor-tab">
                    <div class="input-field col s6">
                        <input placeholder="Farmer Brown's Farm" id="vendor" type="text" class="validate">
                        <label for="first_name">Vendor</label>
                        <button id="vendorButton" class="button button-rounded-hover">Search</button>
                    </div>
                </div>
        
                <div id="livestock-tab">
                    <div class="input-field col s6">
                        <input placeholder="Laying Hens" id="livestock" type="text" class="validate">
                        <label for="first_name">Livestock</label>
                        <button id="livestockButton" class="button button-rounded-hover">Search</button>
                    </div>
                </div>
        
            </div>
        </div>
    </div>
