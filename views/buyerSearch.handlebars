    <div class="container">
        <div class="card">
            <div class="card-content">
                <p>Search by...</p>
            </div>
            <div class="card-tabs">
                <ul class="tabs tabs-fixed-width">
                    <li class="tab">
                        <a href="#product-tab">Product</a>
                    </li>
                    <li class="tab">
                        <a href="#city-tab">City</a>
                    </li>
                    <li class="tab">
                        <a href="#vendor-tab">Vendor</a>
                    </li>
                    <li class="tab">
